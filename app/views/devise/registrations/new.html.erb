<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-4 col-md-4">
          <div class="form-login">
            <h4>Registro</h4>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control input-sm chat-input", placeholder: "usuario" %>
            </br>
            <%= f.label 'Contraseña' %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "contraseña" %>
            </br>
            <%= f.label 'Contraseña' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "confirmar contraseña" %>
            </br>
            <div class="wrapper">
              <span class="group-btn">
                <%= f.submit "Registrarse", class: "btn btn-primary btn-md"%>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
